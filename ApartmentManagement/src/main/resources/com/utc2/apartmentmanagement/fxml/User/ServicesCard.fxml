<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="300.0" styleClass="service-card" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="350.0" prefWidth="300.0" spacing="10.0">
            <children>
                <ImageView fx:id="serviceImage" fitHeight="150.0" fitWidth="280.0" pickOnBounds="true" preserveRatio="true" />
                <Label fx:id="serviceNameLabel" text="Service Name" textFill="#1a936f">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="servicePriceLabel" text="250,000 VND / month" textFill="#333333">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="serviceDescriptionLabel" alignment="TOP_LEFT" prefHeight="60.0" prefWidth="280.0" text="Service description goes here. This is a detailed description about what the service offers and its benefits." textAlignment="JUSTIFY" wrapText="true">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <Button fx:id="registerButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" styleClass="register-service-button" text="Register Service">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>