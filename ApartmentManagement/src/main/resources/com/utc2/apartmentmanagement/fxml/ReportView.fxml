<AnchorPane prefHeight="685.0" prefWidth="1339.0" style="-fx-background-color: #f2f2f2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utc2.apartmentmanagement.Controller.ReportViewController">
    <children>
        <Label alignment="CENTER" layoutX="539.0" layoutY="27.0" prefHeight="35.0" prefWidth="282.0" style="-fx-font-weight: bold;" text="BÁO CÁO THỐNG KÊ" textAlignment="CENTER">
