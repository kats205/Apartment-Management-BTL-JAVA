<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="464.0" prefWidth="900.0" styleClass="apartment-card" stylesheets="@../styles/MyApartment.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utc2.apartmentmanagement.Controller.User.MyApartmentController">
    <children>
        <HBox prefHeight="432.0" prefWidth="830.0" spacing="10.0">
            <children>
                <ImageView fitHeight="200.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/UserDashboard/apartment.png" />
                    </image>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </ImageView>
                <VBox prefHeight="432.0" prefWidth="224.0" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Label fx:id="apartmentIdLabel" styleClass="apartment-id" text="A101" />
                                <Label fx:id="statusLabel" styleClass="apartment-status" text="occupied" />
                            </children>
                        </HBox>
                        <Label fx:id="buildingNameLabel" styleClass="building-name" text="Chung Cư Xanh" />
                        <HBox spacing="50.0">
                            <children>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="info-label" text="Floor" />
                                        <Label fx:id="floorValueLabel" styleClass="info-value" text="1" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="info-label" text="Area" />
                                        <Label fx:id="areaValueLabel" styleClass="info-value" text="75.5 m²" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="info-label" text="Bedrooms" />
                                        <Label fx:id="bedroomsValueLabel" styleClass="info-value" text="2" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="info-label" text="Maintenance Fee" />
                                        <Label fx:id="feeValueLabel" styleClass="info-value" text="1,500,000 VND" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <TabPane fx:id="apartmentTabs" prefHeight="200.0" prefWidth="672.0" styleClass="apartment-tabs">
                            <tabs>
                                <Tab text="Details">
                                    <content>
                                        <AnchorPane>
                                            <children>
                                                <VBox spacing="10.0">
                                                    <children>
                                                        <HBox spacing="50.0">
                                                            <children>
                                                                <VBox spacing="5.0">
                                                                    <children>
                                                                        <Label styleClass="detail-label" text="Building Address" />
                                                                        <Label fx:id="buildingAddressLabel" styleClass="detail-value" text="123 Đường Lê Văn Lương, Quận 7, TP.HCM" wrapText="true" />
                                                                    </children>
                                                                </VBox>
                                                                <VBox spacing="5.0">
                                                                    <children>
                                                                        <Label styleClass="detail-label" text="Property Value" />
                                                                        <Label fx:id="propertyValueLabel" styleClass="detail-value" text="1,510,000,000 VND" />
                                                                    </children>
                                                                </VBox>
                                                            </children>
                                                        </HBox>
                                                        <HBox spacing="50.0">
                                                            <children>
                                                                <VBox spacing="5.0">
                                                                    <children>
                                                                        <Label styleClass="detail-label" text="Move-in Date" />
                                                                        <Label fx:id="moveInDateLabel" styleClass="detail-value" text="01/06/2022" />
                                                                    </children>
                                                                </VBox>
                                                                <VBox spacing="5.0">
                                                                    <children>
                                                                        <Label styleClass="detail-label" text="Primary Resident" />
                                                                        <Label fx:id="primaryResidentLabel" styleClass="detail-value" text="Vũ Đức Cư" />
                                                                    </children>
                                                                </VBox>
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                    <padding>
                                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                    </padding>
                                                </VBox>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                                <Tab text="Bills">
                                    <content>
                                        <AnchorPane>
                                            <children>
                                                <TableView fx:id="billsTable" prefHeight="150.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                    <columns>
                                                        <TableColumn prefWidth="100.0" text="Bill ID" />
                                                        <TableColumn prefWidth="100.0" text="Date" />
                                                        <TableColumn prefWidth="120.0" text="Due Date" />
                                                        <TableColumn prefWidth="150.0" text="Amount" />
                                                        <TableColumn prefWidth="100.0" text="Status" />
                                                    </columns>
                                                </TableView>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                                <Tab text="Services">
                                    <content>
                                        <AnchorPane>
                                            <children>
                                                <TableView fx:id="servicesTable" prefHeight="150.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                    <columns>
                                                        <TableColumn prefWidth="150.0" text="Service Name" />
                                                        <TableColumn prefWidth="100.0" text="Start Date" />
                                                        <TableColumn prefWidth="100.0" text="End Date" />
                                                        <TableColumn prefWidth="120.0" text="Price" />
                                                        <TableColumn prefWidth="100.0" text="Status" />
                                                    </columns>
                                                </TableView>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Button fx:id="viewDetailsButton" mnemonicParsing="false" styleClass="view-details-button" text="View Full Details" />
                                <Button fx:id="manageButton" mnemonicParsing="false" styleClass="manage-button" text="Manage Apartment" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</AnchorPane>