<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.utc2.apartmentmanagement.Controller.FormAddApartmentController" prefHeight="500.0" prefWidth="600.0">
    <children>
        <VBox spacing="15" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

            <Label text="THÊM CĂN HỘ MỚI" style="-fx-font-weight: bold;">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>

            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="150" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="350" />
                </columnConstraints>

                <!-- Mã căn hộ -->
                <Label text="Mã căn hộ:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="apartmentIdField" promptText="Nhập mã căn hộ (VD: A101)"
                           GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <!-- Tòa nhà -->
                <Label text="Tòa nhà:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ComboBox fx:id="buildingComboBox" prefWidth="Infinity" promptText="Chọn tòa nhà"
                          GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Tầng -->
                <Label text="Tầng:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <ComboBox fx:id="floorComboBox" prefWidth="Infinity" promptText="Chọn tầng"
                          GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <!-- Diện tích -->
                <Label text="Diện tích (m²):" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="areaField" promptText="Nhập diện tích"
                           GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <!-- Số phòng ngủ -->
                <Label text="Số phòng ngủ:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <ComboBox fx:id="bedroomsComboBox" prefWidth="Infinity" promptText="Chọn số phòng ngủ"
                          GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <!-- Giá thuê -->
                <Label text="Giá thuê (VNĐ):" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="priceField" promptText="Nhập giá thuê"
                           GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <!-- Trạng thái -->
                <Label text="Trạng thái:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <ComboBox fx:id="statusComboBox" prefWidth="Infinity" promptText="Chọn trạng thái"
                          GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <!-- Phí bảo trì -->
                <Label text="Phí bảo trì:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                <TextField fx:id="maintenanceFeeField" promptText="Nhập phí bảo trì"
                           GridPane.columnIndex="1" GridPane.rowIndex="7" />
            </GridPane>

            <Separator />

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="cancelButton" text="Đóng" onAction="#handleCancelButton" prefWidth="100" />
                <Button fx:id="saveButton" text="Lưu" onAction="#handleSaveButton"
                        prefWidth="100" style="-fx-background-color: #28a745; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>