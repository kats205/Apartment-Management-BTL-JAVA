<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="apartmentView" prefHeight="655.0" prefWidth="1130.0" style="-fx-background-color: #f2f2f2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utc2.apartmentmanagement.Controller.ApartmentViewController">
    <children>
        <Label alignment="CENTER" layoutX="435.0" layoutY="15.0" prefHeight="40.0" prefWidth="260.0" style="-fx-font-weight: bold;" text="DANH SÁCH CĂN HỘ" textAlignment="CENTER">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label fx:id="noContentLabel" layoutX="93.0" layoutY="27.0" prefHeight="17.0" prefWidth="220.0" style="-fx-background-color: transparent; -fx-opacity: 0;" text="No content available" />
      <HBox layoutX="115.0" layoutY="106.0" prefHeight="40.0" prefWidth="960.0">
         <children>
            <Label prefHeight="40.0" prefWidth="102.0" text="Tòa nhà:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField prefHeight="30.0" prefWidth="150.0">
               <rotationAxis>
                  <Point3D y="100.0" z="1.0" />
               </rotationAxis>
               <HBox.margin>
                  <Insets left="10.0" top="5.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="60.0" layoutY="60.0" prefHeight="40.0" prefWidth="864.0" spacing="15.0">
            <children>
                <Label text="Tòa nhà:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="buildingComboBox" prefHeight="30.0" prefWidth="220.0" promptText="Chọn tòa nhà" stylesheets="@../styles/Dashboard.css" />
                <Label text="Trạng thái:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="statusComboBox" prefHeight="30.0" prefWidth="220.0" promptText="Chọn trạng thái" stylesheets="@../styles/Dashboard.css" />
                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleButtonSearch" prefHeight="30.0" prefWidth="100.0" styleClass="actionButton" stylesheets="@../styles/Dashboard.css" text="Tìm kiếm" />
                <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh" prefHeight="30.0" prefWidth="100.0" styleClass="actionButton" stylesheets="@../styles/Dashboard.css" text="Làm mới" />
            </children>
        </HBox>
        <Button fx:id="addApartmentButton" layoutX="935.0" layoutY="65.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="135.0" styleClass="create-button" stylesheets="@../styles/Dashboard.css" text="Thêm căn hộ mới" />
        <TableView fx:id="apartmentTable" layoutX="60.0" layoutY="158.0" prefHeight="412.0" prefWidth="1010.0" stylesheets="@../styles/Dashboard.css">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100.0" text="Mã căn hộ" style="-fx-font-size: 14px; -fx-text-alignment: CENTER;"/>
                <TableColumn fx:id="buildingColumn" prefWidth="120.0" text="Tòa nhà" style="-fx-font-size: 14px; -fx-text-alignment: CENTER;"/>
                <TableColumn fx:id="floorColumn" prefWidth="100.0" text="Tầng" style="-fx-font-size: 14px; -fx-text-alignment: CENTER;"/>
                <TableColumn fx:id="areaColumn" prefWidth="120.0" text="Diện tích (m²)" style="-fx-font-size: 14px; -fx-text-alignment: CENTER;"/>
                <TableColumn fx:id="bedroomsColumn" prefWidth="120.0" text="Số phòng ngủ" style="-fx-font-size: 14px; -fx-text-alignment: CENTER;"/>
                <TableColumn fx:id="priceColumn" prefWidth="150.0" text="Giá thuê (VNĐ)" style="-fx-font-size: 14px; -fx-text-alignment: CENTER;"/>
                <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Trạng thái" style="-fx-font-size: 14px; -fx-text-alignment: CENTER;"/>
                <TableColumn fx:id="maintenanceFeeCol" prefWidth="120.0" text="Phí bảo trì" style="-fx-font-size: 14px; -fx-text-alignment: CENTER;"/>
            </columns>
        </TableView>
        <Label layoutX="60.0" layoutY="587.0" text="Tổng số căn hộ:">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label fx:id="apartmentCountLabel" layoutX="167.0" layoutY="589.0" text="0">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <HBox alignment="CENTER_RIGHT" layoutX="715.0" layoutY="577.0" prefHeight="40.0" prefWidth="355.0" spacing="10.0">
            <children>
                <Button fx:id="detailButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" styleClass="actionButton" stylesheets="@../styles/Dashboard.css" text="Xem chi tiết" />
                <Button fx:id="editButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" styleClass="actionButton" stylesheets="@../styles/Dashboard.css" text="Chỉnh sửa" />
                <Button fx:id="exportButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" styleClass="actionButton" stylesheets="@../styles/Dashboard.css" text="Xuất báo cáo" />
            </children>
        </HBox>
        <Button fx:id="closeButton" layoutX="970.0" layoutY="620.0" mnemonicParsing="false" onAction="#handleCloseButton" prefHeight="30.0" prefWidth="100.0" styleClass="close-button" stylesheets="@../styles/Dashboard.css" text="Đóng" />
    </children>
</AnchorPane>
