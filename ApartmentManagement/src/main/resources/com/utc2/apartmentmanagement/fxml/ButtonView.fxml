                        <Button fx:id="addUserButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="135.0" styleClass="create-button" stylesheets="@../styles/Dashboard.css" text="Thêm người dùng" />
                    </children>
                </HBox>

                <TableView fx:id="userTable" prefHeight="200.0" prefWidth="1207.0" stylesheets="@../styles/Dashboard.css">
                    <columns>
                        <TableColumn fx:id="userIdColumn" prefWidth="100.0" text="Mã người dùng" />
                        <TableColumn fx:id="usernameColumn" prefWidth="150.0" text="Tên đăng nhập" />
