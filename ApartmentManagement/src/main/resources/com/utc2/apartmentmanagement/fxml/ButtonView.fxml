                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1207.0" spacing="20.0">
                    <children>
                        <Label text="Quản lý người dùng" underline="true">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="1207.0" spacing="15.0">
                    <children>
                        <Label text="Tìm kiếm:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="searchUserField" prefHeight="30.0" prefWidth="300.0" promptText="Nhập tên hoặc email người dùng" />
