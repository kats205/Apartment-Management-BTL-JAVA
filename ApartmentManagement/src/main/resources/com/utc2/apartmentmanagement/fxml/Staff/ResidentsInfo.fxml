<AnchorPane prefHeight="655.0" prefWidth="1130.0" style="-fx-background-color: white;" stylesheets="@../../styles/StaffCSS/ResidentsInfo.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utc2.apartmentmanagement.Controller.Staff.ResidentsInfoController">
