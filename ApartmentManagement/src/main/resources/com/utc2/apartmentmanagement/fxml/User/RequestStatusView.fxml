<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="655.0" prefWidth="1100.0" stylesheets="@../../styles/UserCSS/Complaints.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utc2.apartmentmanagement.Controller.User.RequestStatusController">
    <children>
        <BorderPane prefHeight="655.0" prefWidth="1100.0">
            <!-- Header Section -->
            <top>
                <AnchorPane fx:id="ComplaintView" prefHeight="60.0" prefWidth="1100.0" style="-fx-background-color: white;">
                    <children>
                        <Label layoutX="470.0" layoutY="15.0" text="Request Status " textFill="#1a936f">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
            </top>

            <!-- Main Content -->
            <center>
                <TabPane fx:id="complaintsTabPane" prefHeight="555.0" prefWidth="1100.0" styleClass="complaints-tab-pane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
                    <tabs>
                        <!-- Maintenance Complaints Tab -->
                        <Tab text="My Maintenance Requests">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="520.0" prefWidth="1100.0">
                                    <children>
                                        <VBox fillWidth="false" prefHeight="520.0" prefWidth="1100.0" spacing="15.0">
                                            <children>
                                                <!-- Tab Header -->
                                                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1060.0" spacing="20.0">
                                                    <children>
                                                        <Label text="My Maintenance Requests" textFill="#1a936f">
                                                            <font>
                                                                <Font name="System Bold" size="18.0" />
                                                            </font>
                                                        </Label>
                                                        <Label fx:id="maintenanceCountLabel" prefHeight="20.0" prefWidth="121.0" text="(5 total requests)" textFill="#666666">
                                                            <font>
                                                                <Font size="14.0" />
                                                            </font>
                                                        </Label>
                                                    </children>
                                                    <padding>
                                                        <Insets left="20.0" />
                                                    </padding>
                                                </HBox>

                                                <!-- Filter Section -->
                                                <HBox alignment="CENTER_LEFT" fillHeight="false" prefHeight="50.0" prefWidth="1100.0" spacing="15.0" style="-fx-background-color: white;" styleClass="filter-container" VBox.vgrow="ALWAYS">
                                                    <children>
                                                        <Label prefHeight="19.0" prefWidth="60.0" styleClass="filter-label" text="Status:">
                                                            <HBox.margin>
                                                                <Insets left="20.0" />
                                                            </HBox.margin></Label>
                                                        <ComboBox fx:id="maintenanceStatusFilter" prefHeight="27.0" prefWidth="150.0" promptText="All Status" styleClass="filter-combo" />
                                                        <Label prefHeight="19.0" prefWidth="63.0" styleClass="filter-label" text="Priority:" />
                                                        <ComboBox fx:id="maintenancePriorityFilter" prefHeight="27.0" prefWidth="120.0" promptText="All Priority" styleClass="filter-combo" />
                                                        <Label prefHeight="19.0" prefWidth="77.0" styleClass="filter-label" text="Issue Type" />
                                                        <TextField fx:id="maintenanceApartmentFilter" prefHeight="27.0" prefWidth="160.0" promptText="Search" styleClass="filter-text" />
                                                        <Button fx:id="filterMaintenanceButton" mnemonicParsing="false" onAction="#handleFilterMaintenance" prefHeight="29.0" prefWidth="101.0" styleClass="filter-button" text="Select All " />
                                                        <Button fx:id="clearMaintenanceFilterButton" mnemonicParsing="false" onAction="#handleClearMaintenanceFilter" prefHeight="29.0" prefWidth="85.0" styleClass="clear-filter-button" text="Delete " />
                                                        <Region prefHeight="29.0" prefWidth="99.0" HBox.hgrow="ALWAYS" />
                                                        <Button fx:id="refreshMaintenanceButton" mnemonicParsing="false" onAction="#handleRefreshMaintenance" prefHeight="29.0" prefWidth="94.0" styleClass="refresh-button" text="Refresh">
                                                            <HBox.margin>
                                                                <Insets right="20.0" />
                                                            </HBox.margin></Button>
                                                    </children>
                                                    <VBox.margin>
                                                        <Insets />
                                                    </VBox.margin>
                                                </HBox>

                                                <!-- Action Buttons -->
                                                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="1060.0" spacing="12.0">
                                                    <padding>
                                                        <Insets left="20.0" right="20.0" />
                                                    </padding>
                                                </HBox>

                                                <!-- Maintenance Table -->
                                                <TableView fx:id="maintenanceTable" prefHeight="400.0" prefWidth="1060.0" styleClass="data-table">
                                                    <columns>
                                                        <TableColumn fx:id="maintenanceIdColumn" prefWidth="91.19999122619629" text="Request ID " />
                                                        <TableColumn fx:id="maintenanceApartmentColumn" prefWidth="97.86666107177734" text="Issue Type" />
                                                        <TableColumn fx:id="maintenanceDescriptionColumn" prefWidth="177.33335876464844" text="Description" />
                                                        <TableColumn fx:id="maintenanceStatusColumn" prefWidth="117.3333740234375" text="Status" />
                                                        <TableColumn fx:id="maintenancePriorityColumn" prefWidth="80.53338623046875" text="Priority" />
                                                        <TableColumn fx:id="maintenanceRequestDateColumn" prefWidth="126.66668701171875" text="Request Date" />
                                                        <TableColumn fx:id="maintenanceStaffColumn" prefWidth="182.13336181640625" text="Assigned Staff" />
                                                        <TableColumn fx:id="maintenanceResidentColumn" prefWidth="184.00006103515625" text="Completion Date " />
                                                    </columns>
                                                    <VBox.margin>
                                                        <Insets left="20.0" right="20.0" />
                                                    </VBox.margin>
                                                </TableView>

                                                <!-- Footer -->
                                                <HBox alignment="CENTER_RIGHT" prefHeight="36.0" prefWidth="1100.0" spacing="10.0">
                                                    <padding>
                                                        <Insets right="20.0" />
                                                    </padding>
                                                    <children>
                                                        <Button fx:id="closeMaintenanceButton" mnemonicParsing="false" onAction="#handleClose" styleClass="close-button" text="Cancel " />
                                                    </children>
                                                </HBox>
                                            </children>
                                            <padding>
                                                <Insets top="10.0" />
                                            </padding>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>

                        <!-- Service Complaints Tab -->
                        <Tab text="My Service Complaints">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="520.0" prefWidth="1100.0">
                                    <children>
                                        <VBox fillWidth="false" prefHeight="520.0" prefWidth="1100.0" spacing="15.0">
                                            <children>
                                                <!-- Tab Header -->
                                                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1060.0" spacing="20.0">
                                                    <children>
                                                        <Label text="My Service Complaints" textFill="#1a936f">
                                                            <font>
                                                                <Font name="System Bold" size="18.0" />
                                                            </font>
                                                        </Label>
                                                        <Label fx:id="serviceComplaintsCountLabel" text="(3 total complaints)" textFill="#666666">
                                                            <font>
                                                                <Font size="14.0" />
                                                            </font>
                                                        </Label>
                                                    </children>
                                                    <padding>
                                                        <Insets left="20.0" />
                                                    </padding>
                                                </HBox>

                                                <!-- Filter Section -->
                                                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="1100.0" spacing="15.0" styleClass="filter-container">
                                                    <children>
                                                        <Label prefHeight="19.0" prefWidth="49.0" styleClass="filter-label" text="Status:">
                                                            <HBox.margin>
                                                                <Insets left="20.0" />
                                                            </HBox.margin></Label>
                                                        <ComboBox fx:id="serviceStatusFilter" prefHeight="27.0" prefWidth="150.0" promptText="All Status" styleClass="filter-combo" />
                                                        <Label prefHeight="19.0" prefWidth="83.0" styleClass="filter-label" text="Service Type:" />
                                                        <ComboBox fx:id="serviceTypeFilter" prefHeight="27.0" prefWidth="130.0" promptText="All Services" styleClass="filter-combo" />
                                                        <Button fx:id="filterServiceButton" mnemonicParsing="false" onAction="#handleFilterService" prefHeight="29.0" prefWidth="99.0" styleClass="filter-button" text="Select All" />
                                                        <Button fx:id="clearServiceFilterButton" mnemonicParsing="false" onAction="#handleClearServiceFilter" prefWidth="70.0" styleClass="clear-filter-button" text="Delete" />
                                                        <Region prefHeight="29.0" prefWidth="63.0" HBox.hgrow="ALWAYS" />
                                                        <Button fx:id="refreshServiceButton" mnemonicParsing="false" onAction="#handleRefreshService" prefHeight="29.0" prefWidth="81.0" styleClass="refresh-button" text="Refresh">
                                                            <HBox.margin>
                                                                <Insets right="20.0" />
                                                            </HBox.margin></Button>
                                                    </children>
                                                </HBox>

                                                <!-- Service Table -->
                                                <TableView fx:id="serviceTable" prefHeight="400.0" prefWidth="1060.0" styleClass="data-table">
                                                    <columns>
                                                        <TableColumn fx:id="serviceComplaintIdColumn" prefWidth="110.93330574035645" text="Complaint ID " />
                                                        <TableColumn fx:id="serviceNameColumn" prefWidth="119.46672058105469" text="Service Name" />
                                                        <TableColumn fx:id="serviceApartmentColumn" prefWidth="232.2666015625" text="Description" />
                                                        <TableColumn fx:id="serviceComplaintDescColumn" prefWidth="97.06671142578125" text="Status" />
                                                        <TableColumn fx:id="serviceStatusColumn" prefWidth="100.5333251953125" text="Severity" />
                                                        <TableColumn fx:id="serviceSeverityColumn" prefWidth="121.33331298828125" text="Submit Date" />
                                                        <TableColumn fx:id="serviceSubmitDateColumn" prefWidth="134.93341064453125" text="Resolution Date" />
                                                        <TableColumn fx:id="serviceResolutionDateColumn" prefWidth="141.8665771484375" text="Assigned Date" />
                                                    </columns>
                                                    <VBox.margin>
                                                        <Insets left="20.0" right="20.0" />
                                                    </VBox.margin>
                                                </TableView>

                                                <!-- Footer -->
                                                <HBox alignment="CENTER_RIGHT" prefHeight="36.0" prefWidth="1100.0" spacing="10.0">
                                                    <children>
                                                        <Button fx:id="closeServiceButton" mnemonicParsing="false" onAction="#handleClose" styleClass="close-button" text="Cancel" />
                                                    </children>
                                                    <padding>
                                                        <Insets right="20.0" />
                                                    </padding>
                                                </HBox>
                                            </children>
                                            <padding>
                                                <Insets top="10.0" />
                                            </padding>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                    </tabs>
                    <padding>
                        <Insets top="15.0" />
                    </padding>
                </TabPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
