<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.learn1.Events.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="15" prefWidth="400" prefHeight="300">
            <Label text="LOGIN" styleClass="header"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <PasswordField fx:id="passwordField" promptText="Password"/>
            <Button text="Login" onAction="#handleLogin" styleClass="primary-button"/>

            <HBox alignment="CENTER" spacing="5">
                <Label text="I don't have an account"/>
                <Button text="Sign Up" onAction="#goToSignUp" styleClass="link-button"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
